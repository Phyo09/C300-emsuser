@model Emsuser
@*@{
        ViewData["Title"] = "ForgetPassword";
    }*@

@{

    string msg = ViewData["Msg"] as string;
}
<style>
    h1 {
        font-weight: bold;
        /*font-size: 10vw*/
    }
</style>


<h1 style="text-align:center">ForgetPassword</h1>
<p style="text-align:center">No worries , we will help you recover it back.</p>
<hr />

@*<span  style="color:red;text-align:left">@TempData["Msg"]</span>*@



<form asp-controller="Account" asp-action="ForgetPassword" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        @if (msg != null)
        {
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-4">
                    <div class="alert alert-danger">
                        <strong>@msg</strong>
                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            <label asp-for="Email" class="col-sm-3 control-label">Email </label>
            <div class="col-sm-4">
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="has-error col-sm-3">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6">
                <input type="submit" value="Submit" class="btn btn-primary" />

            </div>
        </div>
    </div>
</form>