<script>
    function ConfirmDelete() {
        if (confirm("Are you sure you want deactivate?") == false) {
            event.stopPropagation;
            event.preventDefault;
            return false;

        }
    }
    $(document).ready(function () {
        $('#btnEdit').click(function () {
            $("#name").removeAttr("readonly");
            $("#email").removeAttr("readonly");
            $("#dob").removeAttr("readonly");
            $("#phone").removeAttr("readonly");
            $("#password").removeAttr("readonly");

        });

    });


</script>

<style>
    body {
        background-color: #e6e6e6;
    }

    * {
        box-sizing: border-box
    }

    @@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,400i&subset=cyrillic';

    .form-wrap {
        width: 900px;
        background: #ffd500;
        border-radius: 20px;
        height: 100%;
        margin-top: 0px;
        margin-left: 10%;
    }

        .form-wrap * {
            transition: .1s linear
        }

    .profile {
        width: 240px;
        float: left;
        text-align: center;
        padding: 20px;
    }

    form {
        background: white;
        float: left;
        width: calc(100% - 240px);
        padding: 30px;
        height: 700px;
        border-radius: 0 20px 20px 0;
        color: #7b7b7b;
    }

        .form-wrap:after, form div:after {
            content: "";
            display: table;
            clear: both;
        }

        form div {
            margin-bottom: 15px;
            position: relative;
        }

    h1 {
        font-size: 24px;
        font-weight: 400;
        position: relative;
        margin-top: 50px;
    }

        h1:after {
            content: "\f138";
            font-size: 40px;
            font-family: FontAwesome;
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
        }

    label, span {
        display: block;
        font-size: 14px;
        margin-bottom: 8px;
    }

    input[type="text"], input[type="email"], input[type="date"], input[type="password"] {
        width: 80%;
        padding: 10px 15px;
        border-width: 0;
        background: #e6e6e6;
        outline: none;
        margin: 0;
    }

        input[type="text"]:focus, input[type="email"]:focus {
            box-shadow: inset 0 0 0 2px rgba(0,0,0,.2);
        }


    select {
        width: 80%;
        cursor: pointer;
        padding: 10px 15px;
        outline: 0;
        border: 0;
        background: #e6e6e6;
        color: #7b7b7b;
        -webkit-appearance: none;
        -moz-appearance: none;
    }

        select::-ms-expand {
            display: none;
        }

    .select-arrow {
        position: absolute;
        top: 38px;
        right: 15px;
        width: 0;
        height: 0;
        pointer-events: none;
        border-style: solid;
        border-width: 8px 5px 0 5px;
        border-color: #7b7b7b transparent transparent transparent;
    }

    input[type="submit"] {
        padding: 10px 0;
        border-width: 0;
        display: block;
        width: 120px;
        margin: 25px auto 0;
        background: #60e6c5;
        color: white;
        font-size: 14px;
        outline: none;
        text-transform: uppercase;
    }

    @@media (max-width: 600px) {
        body {
            display: block
        }

        .form-wrap {
            margin: 20px auto;
            max-width: 800px;
            width: 100%
        }

        .profile, form {
            float: none;
            width: 100%
        }

        h1 {
            margin-top: auto;
            padding-bottom: 50px;
        }

        form {
            border-radius: 0 0 20px 20px
        }
    }

    #notification {
        transform: scale(2) !important;
        margin-left: 5px;
    }
</style>

<div class="form-wrap">
    <div class="profile">

        <img id="FacilityImage" style="height:200px" src="@image" alt="@Model.Picture" />
        @*<img src="https://i1.wp.com/www.winhelponline.com/blog/wp-content/uploads/2017/12/user.png?resize=256%2C256&quality=100">*@
        <br />
        <br />
        <br />
        <b style="font-size:18px">Welcome  @Model.Name !</b>
        <br />
        <b style="font-size:18px">User Id : @Model.UserId </b>
        <br />
        @if (Model.Role == "Staff")
        {
            <b style="font-size:18px">Role: Staff</b>
        }
        else if (Model.Role == "Admin")
        {
            <b style="font-size:18px">Role: Admin</b>
        }
        <br />
        <br />
        <br />

        <a asp-action="Deactivate" asp-controller="Emsuser" style="font-size:22px;" onclick="return ConfirmDelete()" asp-route-id="@Model.UserId"><span style="color:red" class="fa fa-trash">Deactivate Account</span></a>
        <br />
        <br />
        <button id="btnEdit" class="btn btn-primary"><i class="fa fa-edit">  Edit Profile</i></button>
    </div>

    <form method="post" asp-action="Profile" asp-controller="Emsuser">

        <div>
            <label>Name</label>
            <input asp-for="Name" id="name" type="text" readonly="readonly" name="name">
            @*<input id="myButton"  style="margin-top:-37px;margin-left:87%" class="pull-right" type="button" value="Edit" />*@
        </div>
        <div>
            <label>E-mail</label>
            <input asp-for="Email" id="email" type="email" readonly="readonly" name="email">
            @*<input id="myButton2" style="margin-top:-37px;margin-left:80%" type="button" value="Edit" />*@
        </div>
        <div>
            <label>D.O.B</label>
            <input asp-for="Dob" id="dob" type="date" readonly="readonly" name="dob">
            @*<input id="myButton3" style="margin-top:-37px;margin-left:80%" type="button" value="Edit" />*@
        </div>
        <div>
            <label>Phone</label>
            <input asp-for="Phone" id="phone" type="text" readonly="readonly" name="phone">
            @*<input id="myButton3" style="margin-top:-37px;margin-left:80%" type="button" value="Edit" />*@
        </div>
        <div>
            <label>Status</label>
            <input asp-for="Status" id="status" type="text" readonly="readonly" name="status">
            @*<input id="myButton3" style="margin-top:-37px;margin-left:80%" type="button" value="Edit" />*@
        </div>
        <div>
            <label>Password</label>
            <input asp-for="Password" id="password" readonly="readonly" type="text" name="password">

            @*<input id="myButton4" style="margin-top:-37px;margin-left:80%" type="button" value="update" />*@
        </div>
        <div>
            <label>Country of Residence</label>

            <select asp-for="Country" name="country">
                @foreach (string item in country_list)
                {
                    <option readonly="readonly" value="@item">@item</option>
                }
            </select>


        </div>
        <div>
            @*<label>Forum Notification</label>
                <input    class="checkbox-inline" id="notification" type="checkbox"  name="notification">
                <input id="myButton3" style="margin-top:-37px;margin-left:80%" type="button" value="Edit" />*@
        </div>
        <input type="submit" style="color:black;font:bolder;border-radius:6px" id="update" value="Update" />
    </form>
</div>

