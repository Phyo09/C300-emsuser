<div class="container">
    <form asp-action="Create" method="post" asp-controller="Thread">
        <h3>New Thread  </h3>

        <input type="text" asp-for="ThreadName" placeholder="Thread Name" />
        <span asp-validation-for="ThreadName" class="text-danger"></span>


        <select asp-for="TopicId">
            @foreach (Topic item in topicList)
            {

                <option value="@item.TopicId"> @item.TopicName</option>


            }

        </select>
<textarea asp-for="ThreadDescription" rows="5" placeholder="Description"></textarea>

        <span asp-validation-for="ThreadDescription" class="text-danger"></span>


        <button type="submit" asp-route-id="@id">Create!</button>
    </form>
</div>

