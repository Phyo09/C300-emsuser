<h1 style="color:orange ; text-align:center">Reply Feedback</h1>
<hr />


<form asp-controller="Feedback" asp-action="ReplyFeedback" method="post" class="form-horizontal" role="form">

    <div class="form-horizontal">
        @if (msg != null)
        {
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-4">
                    <div class="alert alert-danger">
                        <strong>@msg</strong>
                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            <label asp-for="FeedbackId" class="col-sm-3 control-label">ID: </label>
            <div class="col-sm-4">
                <input asp-for="FeedbackId" class="form-control" readonly="readonly" value="@Model.FeedbackId" />
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-sm-3 control-label">Name: </label>
            <div class="col-sm-4">
                <input asp-for="Name" class="form-control" readonly="readonly" value="@Model.Name" />
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-sm-3 control-label">Email: </label>
            <div class="col-sm-4">
                <input asp-for="Email" class="form-control" readonly="readonly" value="@Model.Email" />
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-sm-3 control-label">Description: </label>
            <div class="col-sm-4">
                <textarea rows="4" asp-for="Description" class="form-control" readonly="readonly" value="@Model.Description"> </textarea>
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Subject" class="col-sm-3 control-label">Subject: </label>
            <div class="col-sm-4">
                <textarea rows="4" asp-for="Subject" class="form-control" value="@Model.Subject"> </textarea>

            </div>
        </div>

        <div class="form-group">
            <label asp-for="Reply" class="col-sm-3 control-label">Reply Feedback: </label>
            <div class="col-sm-4">
                <textarea rows="4" asp-for="Reply" class="form-control" value="@Model.Reply"> </textarea>
                @*<input asp-for="Reply" class="form-control" />*@
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6">
                <input type="submit" value="Reply" class="btn btn-primary" />
                @*<input type="submit" value="Reset" class="btn btn-default" />*@
            </div>
        </div>
    </div>
</form>